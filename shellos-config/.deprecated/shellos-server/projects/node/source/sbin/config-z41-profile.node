#!/bin/bash

# conf/variables
cat << EOF >> $HOST4GE_DIR/conf/variables

# container bridge configuration
export CONTAINER_BRIDGE_NAME="$CONTAINER_BRIDGE_NAME"
export CONTAINER_BRIDGE_IPADDRESS="$CONTAINER_BRIDGE_IPADDRESS"
export CONTAINER_BRIDGE_NETMASK="$CONTAINER_BRIDGE_NETMASK"
export CONTAINER_BRIDGE_NETWORK="$CONTAINER_BRIDGE_NETWORK"
export CONTAINER_BRIDGE_BROADCAST="$CONTAINER_BRIDGE_BROADCAST"
EOF
chmod 600 $HOST4GE_DIR/conf/variables

exit 0
